<?xml version="1.0"?>
<block>
  <name>System Time Tagger</name>
  <key>timing_utils_system_time_tagger_X</key>
  <category>[Sandia]/Timing Utilities</category>
  <import>import timing_utils</import>
  <import>import pmt</import>
  <make>timing_utils.system_time_tagger_$(type)($interval)</make>
 
  <param>
    <name>Type</name>
    <key>type</key>
    <type>enum</type>
    <option>
      <name>Complex</name>
      <key>c</key>
      <opt>type:complex</opt>
    </option>
    <option>
      <name>Float</name>
      <key>f</key>
      <opt>type:float</opt>
    </option>
    <option>
      <name>Short</name>
      <key>s</key>
      <opt>type:short</opt>
    </option>
    <option>
      <name>Byte</name>
      <key>b</key>
      <opt>type:byte</opt>
    </option>
  </param>
  
  <param>
    <name>Tag Interval</name>
    <key>interval</key>
    <value>10000</value>
    <type>int</type>
    <option>
      <name>Disabled</name>
      <key>0</key>
    </option>
  </param>
    
  <sink>
    <name>in</name>
    <type>$type.type</type>
  </sink>
  
  <source>
    <name>out</name>
    <type>$type.type</type>
  </source>
</block>
