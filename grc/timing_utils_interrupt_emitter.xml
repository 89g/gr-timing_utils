<?xml version="1.0"?>
<block>
  <name>Interrupt Emitter</name>
  <key>timing_utils_interrupt_emitter</key>
  <category>[Sandia]/Timing Utilities</category>
  <import>import timing_utils</import>
  <make>timing_utils.interrupt_emitter($rate, $late_pdu_mode)</make>

  <param>
    <name>Sample Rate</name>
    <key>rate</key>
    <value>samp_rate</value>
    <type>float</type>
  </param>  
  
  <param>
    <name>Drop Late?</name>
    <key>late_pdu_mode</key>
    <value>False</value>
    <type>bool</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>set</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>trig</name>
    <type>message</type>
    <optional>1</optional>
  </source>

  <doc>Block outputs a message every interval seconds according to system clock.  It does, however, use the input stream tags as a reference to adjust times.</doc>

</block>
